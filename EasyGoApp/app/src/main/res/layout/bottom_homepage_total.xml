<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/homepage_advert_viewpager"
            android:layout_width="match_parent"
            android:layout_height="170dp">
        </android.support.v4.view.ViewPager>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/homepage_advert_viewpagerindicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/homepage_advert_viewpager"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            app:fillColor="@color/textDown"
            />
    </RelativeLayout>


    <include
        layout="@layout/bottom_homepage_city"/>

    <include
        layout="@layout/bottom_homepage_hot"/>

    <include
        layout="@layout/bottom_homepage_local"/>

</LinearLayout>