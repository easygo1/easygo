<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/house_detail_head_photo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/house_detail_owner_name"
        style="@style/text_ww"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="宋唐"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- <TextView
             android:id="@+id/house_detail_owner_age"
             style="@style/text_ww"
             android:text="22岁"/>-->

        <TextView
            android:id="@+id/house_detail_owner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="女"/>

        <TextView
            android:id="@+id/house_detail_owner_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"/>

        <TextView
            android:id="@+id/house_detail_owner_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="自由职业者"/>

    </LinearLayout>


