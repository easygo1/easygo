<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.easygo.activity.LocationToActivity">
    <EditText
        android:hint="输入位置信息"
        android:id="@+id/location_hz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hz_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="转换成经纬度"
        android:id="@+id/geoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="输入经度"
        android:id="@+id/location_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="输入纬度"
        android:id="@+id/location_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/xy_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="转换成地址"
        android:id="@+id/regeoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
